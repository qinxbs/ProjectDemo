<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <com.gs.myceshi.viewpage.MyLinearLayout
        android:id="@+id/id_mylinear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        custom:tab_num="4"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试1" />

        <TextView
            android:id="@+id/tv_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试2" />

        <TextView
            android:id="@+id/tv_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试3" />
        <TextView
            android:id="@+id/tv_tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试4" />
        <TextView
            android:id="@+id/tv_tv5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试5" />
        <TextView
            android:id="@+id/tv_tv6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试6" />
        <TextView
            android:id="@+id/tv_tv7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试7" />
    </com.gs.myceshi.viewpage.MyLinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>